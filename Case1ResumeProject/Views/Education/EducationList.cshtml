@model List<Education>
@{
    ViewData["Title"] = "EducationList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-5xl mx-auto space-y-8">
        <!-- Welcome Section -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Eğitim Listesi</h3>
                <p class="text-slate-400 text-sm mt-1">Eğitim bilgilerinizle ilgili işlemleri bu sayfadan gerçekleştirebilirsiniz.</p>
            </div>
            <a href="/Education/CreateEducation/" class="flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all shadow-lg shadow-primary/20">
                <span class="material-symbols-outlined text-white" style="color: white; font-size: 20px;">add</span>
                Yeni Eğitim Girişi
            </a>
        </div>

        <!-- Education List -->
        <div class="space-y-4">
            @foreach (var item in Model)
            {
                <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-xl hover:shadow-2xl hover:border-slate-700 transition-all group">
                    <div class="p-6">
                        <div class="flex items-start justify-between gap-6">
                            <!-- Left: Icon & Main Info -->
                            <div class="flex items-start gap-4 flex-1">
                                <div class="w-14 h-14 bg-primary/20 rounded-xl flex items-center justify-center flex-shrink-0 group-hover:bg-primary/30 transition-all">
                                    <span class="material-symbols-outlined text-primary" style="font-size: 28px;">school</span>
                                </div>
                                <div class="flex-1 space-y-3">
                                    <!-- University & Department -->
                                    <div>
                                        <h4 class="text-xl font-bold text-white mb-1 group-hover:text-primary transition-colors">@item.University</h4>
                                        <p class="text-slate-300 font-medium">@item.Department</p>
                                    </div>

                                    <!-- Details Row -->
                                    <div class="flex flex-wrap items-center gap-6 text-sm">
                                        <!-- Degree -->
                                        <div class="flex items-center gap-2">
                                            <span class="inline-flex items-center px-3 py-1.5 rounded-lg font-semibold bg-blue-500/20 text-blue-400 border border-blue-500/30">
                                                @item.Degree
                                            </span>
                                        </div>

                                        <!-- Period -->
                                        <div class="flex items-center gap-2 text-slate-400">
                                            <span class="material-symbols-outlined" style="font-size: 18px;">calendar_month</span>
                                            <span class="font-medium">@item.EducationPeriod</span>
                                        </div>

                                        <!-- GPA -->
                                        @if (!string.IsNullOrEmpty(item.GPA))
                                        {
                                            <div class="flex items-center gap-2 text-emerald-400">
                                                <span class="material-symbols-outlined" style="font-size: 18px;">stars</span>
                                                <span class="font-bold">GPA: @item.GPA</span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>

                            <!-- Right: Actions & ID -->
                            <div class="flex flex-col items-end gap-3">
                                <div class="flex items-center gap-2">
                                    <a href="/Education/UpdateEducation/@item.EducationId" class="p-2 bg-slate-800 hover:bg-slate-700 text-slate-400 hover:text-primary rounded-lg transition-all" title="Düzenle">
                                        <span class="material-symbols-outlined" style="font-size: 20px;">edit</span>
                                    </a>
                                    <a href="/Education/DeleteEducation/@item.EducationId" class="p-2 bg-red-500/10 hover:bg-red-500/20 text-red-400 hover:text-red-300 rounded-lg transition-all border border-red-500/30" title="Sil">
                                        <span class="material-symbols-outlined" style="font-size: 20px;">delete</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Footer -->
        <div class="flex items-center justify-between px-4">
            <p class="text-slate-500 text-sm">Toplam <span class="text-white font-semibold">@Model.Count</span> eğitim kaydı listeleniyor</p>
            <div class="flex gap-2">
                <button class="px-4 py-2 rounded-lg border border-slate-700 text-slate-400 hover:text-white hover:border-slate-600 transition-all text-sm font-bold">Önceki</button>
                <button class="px-4 py-2 rounded-lg border border-slate-700 text-slate-400 hover:text-white hover:border-slate-600 transition-all text-sm font-bold">Sonraki</button>
            </div>
        </div>
    </div>
</div>