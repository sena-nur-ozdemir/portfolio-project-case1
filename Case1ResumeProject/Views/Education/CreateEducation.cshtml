@model Education
@{
    ViewData["Title"] = "CreateEducation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-4xl mx-auto space-y-8">
        <!-- Header Section -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Yeni Eğitim Ekle</h3>
                <p class="text-slate-400 text-sm mt-1">Yeni bir eğitim kaydı oluşturun</p>
            </div>
            <a href="/Education/EducationList/" class="flex items-center gap-2 bg-slate-800 hover:bg-slate-700 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all">
                <span class="material-symbols-outlined text-white" style="color: white; font-size: 20px;">arrow_back</span>
                Listeye Dön
            </a>
        </div>

        <!-- Form Card -->
        <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl">
            <form method="post" class="p-8 space-y-6">
                <!-- University -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-slate-300">
                        Üniversite
                        <span class="text-red-400">*</span>
                    </label>
                    <input type="text"
                           name="University"
                           class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                           placeholder="Örn: İstanbul Teknik Üniversitesi"
                           required />
                </div>

                <!-- Department -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-slate-300">
                        Bölüm
                        <span class="text-red-400">*</span>
                    </label>
                    <input type="text"
                           name="Department"
                           class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                           placeholder="Örn: Bilgisayar Mühendisliği"
                           required />
                </div>

                <!-- Degree -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-slate-300">
                        Derece
                        <span class="text-red-400">*</span>
                    </label>
                    <select name="Degree"
                            class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                            required>
                        <option value="" class="bg-slate-900">Derece Seçiniz</option>
                        <option value="Lisans" class="bg-slate-900">Lisans</option>
                        <option value="Ön Lisans" class="bg-slate-900">Ön Lisans</option>
                        <option value="Yüksek Lisans" class="bg-slate-900">Yüksek Lisans</option>
                        <option value="Doktora" class="bg-slate-900">Doktora</option>
                    </select>
                </div>

                <!-- Education Period -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-slate-300">
                        Eğitim Periyodu
                        <span class="text-red-400">*</span>
                    </label>
                    <input type="text"
                           name="EducationPeriod"
                           class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                           placeholder="Örn: 2018 - 2022"
                           required />
                </div>

                <!-- GPA (Optional) -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-slate-300">
                        GPA (Not Ortalaması)
                        <span class="text-slate-500 text-xs font-normal ml-1">- Opsiyonel</span>
                    </label>
                    <input type="text"
                           name="GPA"
                           class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                           placeholder="Örn: 3.45 / 4.00" />
                    <p class="text-xs text-slate-500">Bu alan opsiyoneldir, boş bırakabilirsiniz.</p>
                </div>

                <!-- Action Buttons -->
                <div class="flex items-center gap-4 pt-4 border-t border-slate-800">
                    <button type="submit"
                            class="flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-lg font-bold text-sm transition-all shadow-lg shadow-primary/20">
                        <span class="material-symbols-outlined text-white" style="color: white; font-size: 20px;">save</span>
                        Eğitimi Kaydet
                    </button>
                    <a href="/Education/EducationList/"
                       class="flex items-center gap-2 bg-slate-800 hover:bg-slate-700 text-white px-6 py-3 rounded-lg font-bold text-sm transition-all">
                        <span class="material-symbols-outlined text-white" style="color: white; font-size: 20px;">cancel</span>
                        İptal
                    </a>
                </div>
            </form>
        </div>

        <!-- Info Card -->
        <div class="bg-blue-500/10 border border-blue-500/30 rounded-xl p-6">
            <div class="flex gap-4">
                <span class="material-symbols-outlined text-blue-400" style="font-size: 24px;">info</span>
                <div class="space-y-1">
                    <h4 class="text-sm font-semibold text-blue-400">Bilgilendirme</h4>
                    <p class="text-sm text-slate-300">Yıldız (*) ile işaretli alanların doldurulması zorunludur. GPA alanı opsiyoneldir.</p>
                </div>
            </div>
        </div>
    </div>
</div>


