@model List<Service>
@{
    ViewData["Title"] = "ServiceList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-6xl mx-auto space-y-8">
        <!-- Welcome Section -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Hizmet Listesi</h3>
                <p class="text-slate-400 text-sm mt-1">Sunduğunuz hizmetleri bu sayfadan yönetebilirsiniz.</p>
            </div>
            <a href="/Service/CreateService/" class="flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all shadow-lg shadow-primary/20">
                <span class="material-symbols-outlined text-white" style="color: white; font-size: 20px;">add</span>
                Yeni Hizmet Ekle
            </a>
        </div>
        <!-- Services Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
            @foreach (var item in Model)
            {
                <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-xl hover:shadow-2xl hover:border-slate-700 transition-all group">
                    <!-- Service Info -->
                    <div class="p-5 space-y-3">
                        <!-- Icon & Title -->
                        <div class="flex items-start gap-3">
                            <div class="w-12 h-12 rounded-lg bg-slate-800 flex items-center justify-center flex-shrink-0 group-hover:bg-primary/20 transition-colors">
                                <img src="@item.ImageUrl" alt="@item.Title" class="w-6 h-6 object-contain" />
                            </div>
                            <div class="flex-1 min-w-0">
                                <h4 class="text-lg font-bold text-white group-hover:text-primary transition-colors line-clamp-1">
                                    @item.Title
                                </h4>
                            </div>
                        </div>
                        <!-- Description -->
                        <p class="text-slate-400 text-sm leading-relaxed line-clamp-2">
                            @item.Description
                        </p>
                        <!-- Actions -->
                        <div class="flex items-center gap-2 pt-3 border-t border-slate-800">
                            <a href="/Service/UpdateService/@item.ServiceId" class="flex-1 flex items-center justify-center gap-2 px-3 py-2 bg-slate-800 hover:bg-slate-700 text-white rounded-lg text-sm font-semibold transition-all">
                                <span class="material-symbols-outlined" style="font-size: 18px;">edit</span>
                                Düzenle
                            </a>
                            <a href="/Service/DeleteService/@item.ServiceId" class="flex-1 flex items-center justify-center gap-2 px-3 py-2 bg-red-500/10 hover:bg-red-500/20 text-red-400 rounded-lg text-sm font-semibold transition-all border border-red-500/30">
                                <span class="material-symbols-outlined" style="font-size: 18px;">delete</span>
                                Sil
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- Footer -->
        <div class="flex items-center justify-between px-4">
            <p class="text-slate-500 text-sm">Toplam <span class="text-white font-semibold">@Model.Count</span> hizmet listeleniyor</p>
            <div class="flex gap-2">
                <button class="px-4 py-2 rounded-lg border border-slate-700 text-slate-400 hover:text-white hover:border-slate-600 transition-all text-sm font-bold">Önceki</button>
                <button class="px-4 py-2 rounded-lg border border-slate-700 text-slate-400 hover:text-white hover:border-slate-600 transition-all text-sm font-bold">Sonraki</button>
            </div>
        </div>
    </div>
</div>
