@model List<Portfolio>
@{
    ViewData["Title"] = "PortfolioList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-7xl mx-auto space-y-8">
        <!-- Welcome Section -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Portfolio Listesi</h3>
                <p class="text-slate-400 text-sm mt-1">Projelerinizle ilgili işlemleri bu sayfadan gerçekleştirebilirsiniz.</p>
            </div>
            <a href="/Portfolio/CreatePortfolio/" class="flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all shadow-lg shadow-primary/20">
                <span class="material-symbols-outlined text-white" style="color: white; font-size: 20px;">add</span>
                Yeni Proje Ekle
            </a>
        </div>

        <!-- Portfolio Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
            @foreach (var item in Model)
            {
                <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-xl hover:shadow-2xl hover:border-slate-700 transition-all group">
                    <!-- Project Image -->
                    <div class="relative h-48 bg-slate-900 overflow-hidden">
                        <img src="@item.ImageUrl" alt="@item.ProjectTitle" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" />
                        <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-transparent to-transparent opacity-60"></div>

                        <!-- Status Badge -->
                        <div class="absolute top-3 right-3">
                            @if (item.Status)
                            {
                                <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-bold bg-emerald-500/90 text-white backdrop-blur-sm shadow-lg">
                                    <span class="material-symbols-outlined" style="font-size: 14px;">check_circle</span>
                                    Aktif
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-bold bg-slate-500/90 text-white backdrop-blur-sm shadow-lg">
                                    <span class="material-symbols-outlined" style="font-size: 14px;">pause_circle</span>
                                    Pasif
                                </span>
                            }
                        </div>
                    </div>

                    <!-- Project Info -->
                    <div class="p-5 space-y-3">
                        <!-- Title -->
                        <h4 class="text-base font-bold text-white group-hover:text-primary transition-colors line-clamp-2">
                            @item.ProjectTitle
                        </h4>

                        <!-- Category -->
                        <div class="flex items-center gap-2">
                            <span class="material-symbols-outlined text-slate-400" style="font-size: 18px;">category</span>
                            <span class="inline-flex items-center px-3 py-1 rounded-lg text-xs font-semibold bg-blue-500/20 text-blue-400 border border-blue-500/30">
                                @item.Category.CategoryName
                            </span>
                        </div>

                        <!-- Actions -->
                        <div class="flex items-center gap-2 pt-3 border-t border-slate-800">
                            <a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="flex-1 flex items-center justify-center gap-2 px-4 py-2.5 bg-slate-800 hover:bg-slate-700 text-white rounded-lg text-sm font-semibold transition-all">
                                <span class="material-symbols-outlined" style="font-size: 18px;">edit</span>
                                Düzenle
                            </a>
                            <a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="flex-1 flex items-center justify-center gap-2 px-4 py-2.5 bg-red-500/10 hover:bg-red-500/20 text-red-400 rounded-lg text-sm font-semibold transition-all border border-red-500/30">
                                <span class="material-symbols-outlined" style="font-size: 18px;">delete</span>
                                Sil
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Footer -->
        <div class="flex items-center justify-between px-4">
            <p class="text-slate-500 text-sm">Toplam <span class="text-white font-semibold">@Model.Count</span> proje listeleniyor</p>
            <div class="flex gap-2">
                <button class="px-4 py-2 rounded-lg border border-slate-700 text-slate-400 hover:text-white hover:border-slate-600 transition-all text-sm font-bold">Önceki</button>
                <button class="px-4 py-2 rounded-lg border border-slate-700 text-slate-400 hover:text-white hover:border-slate-600 transition-all text-sm font-bold">Sonraki</button>
            </div>
        </div>
    </div>
</div>

