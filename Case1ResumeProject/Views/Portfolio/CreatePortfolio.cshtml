@model Portfolio
@{
    ViewData["Title"] = "CreatePortfolio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-4xl mx-auto space-y-8">
        <!-- Header Section -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Yeni Proje Ekle</h3>
                <p class="text-slate-400 text-sm mt-1">Portfolyonuza yeni bir proje ekleyin</p>
            </div>
            <a href="/Portfolio/PortfolioList/" class="flex items-center gap-2 bg-slate-800 hover:bg-slate-700 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all">
                <span class="material-symbols-outlined text-white" style="color: white; font-size: 20px;">arrow_back</span>
                Listeye Dön
            </a>
        </div>

        <!-- Form Card -->
        <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl">
            <form method="post" class="p-8 space-y-6">
                <!-- Project Title -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-slate-300">
                        Proje Başlığı
                        <span class="text-red-400">*</span>
                    </label>
                    <input type="text"
                           name="ProjectTitle"
                           class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                           placeholder="Örn: E-Ticaret Web Sitesi"
                           required />
                </div>
                <!-- Project Description -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-slate-300">
                        Proje Açıklaması
                    </label>
                    <textarea name="Description"
                              rows="4"
                              class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                              placeholder="Bu projede neler yaptın? Hangi teknolojileri kullandın?">
                    </textarea>
                </div>


                <!-- Image URL -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-slate-300">
                        Proje Görseli URL
                        <span class="text-red-400">*</span>
                    </label>
                    <input type="text"
                           name="ImageUrl"
                           id="imageUrl"
                           class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                           placeholder="https://example.com/image.jpg"
                           oninput="updateImagePreview(this.value)"
                           required />
                    <p class="text-xs text-slate-500">Projenizin önizleme görselinin URL adresini girin.</p>

                    <!-- Image Preview -->
                    <div class="mt-4 bg-slate-900/30 border border-slate-700 rounded-lg p-4">
                        <p class="text-slate-400 text-xs font-semibold mb-2 uppercase tracking-wider">Görsel Önizleme</p>
                        <div class="w-full h-48 bg-slate-900/50 rounded-lg overflow-hidden flex items-center justify-center">
                            <img id="imagePreview" src="" alt="Önizleme" class="w-full h-full object-cover hidden" />
                            <div id="imagePlaceholder" class="text-slate-600 flex flex-col items-center gap-2">
                                <span class="material-symbols-outlined" style="font-size: 48px;">image</span>
                                <p class="text-sm">Görsel URL girildiğinde önizleme burada görünecek</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Category -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-slate-300">
                        Kategori
                        <span class="text-red-400">*</span>
                    </label>
                    <select name="CategoryId"
                            class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                            required>
                        <option value="" class="bg-slate-900">Kategori Seçiniz</option>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.CategoryId" class="bg-slate-900">@category.CategoryName</option>
                        }
                    </select>
                </div>

                <!-- Status -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-slate-300">
                        Durum
                        <span class="text-red-400">*</span>
                    </label>
                    <div class="flex gap-4">
                        <label class="flex items-center gap-3 px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg cursor-pointer hover:border-primary transition-all group">
                            <input type="radio"
                                   name="Status"
                                   value="true"
                                   class="w-4 h-4 text-primary bg-slate-900 border-slate-600 focus:ring-primary focus:ring-2"
                                   checked />
                            <div class="flex items-center gap-2">
                                <span class="material-symbols-outlined text-emerald-400 group-hover:text-emerald-300" style="font-size: 20px;">check_circle</span>
                                <span class="text-white font-medium">Aktif</span>
                            </div>
                        </label>
                        <label class="flex items-center gap-3 px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg cursor-pointer hover:border-slate-600 transition-all group">
                            <input type="radio"
                                   name="Status"
                                   value="false"
                                   class="w-4 h-4 text-slate-600 bg-slate-900 border-slate-600 focus:ring-slate-500 focus:ring-2" />
                            <div class="flex items-center gap-2">
                                <span class="material-symbols-outlined text-slate-400 group-hover:text-slate-300" style="font-size: 20px;">pause_circle</span>
                                <span class="text-white font-medium">Pasif</span>
                            </div>
                        </label>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex items-center gap-4 pt-4 border-t border-slate-800">
                    <button type="submit"
                            class="flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-lg font-bold text-sm transition-all shadow-lg shadow-primary/20">
                        <span class="material-symbols-outlined text-white" style="color: white; font-size: 20px;">save</span>
                        Projeyi Kaydet
                    </button>
                    <a href="/Portfolio/PortfolioList/"
                       class="flex items-center gap-2 bg-slate-800 hover:bg-slate-700 text-white px-6 py-3 rounded-lg font-bold text-sm transition-all">
                        <span class="material-symbols-outlined text-white" style="color: white; font-size: 20px;">cancel</span>
                        İptal
                    </a>
                </div>
            </form>
        </div>

        <!-- Info Card -->
        <div class="bg-blue-500/10 border border-blue-500/30 rounded-xl p-6">
            <div class="flex gap-4">
                <span class="material-symbols-outlined text-blue-400" style="font-size: 24px;">info</span>
                <div class="space-y-1">
                    <h4 class="text-sm font-semibold text-blue-400">Bilgilendirme</h4>
                    <p class="text-sm text-slate-300">Yıldız (*) ile işaretli alanların doldurulması zorunludur. Proje görseli için geçerli bir URL adresi kullanın.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function updateImagePreview(url) {
        const preview = document.getElementById('imagePreview');
        const placeholder = document.getElementById('imagePlaceholder');

        if (url && url.trim() !== '') {
            preview.src = url;
            preview.classList.remove('hidden');
            placeholder.classList.add('hidden');

            // Hata durumunda placeholder'ı göster
            preview.onerror = function() {
                preview.classList.add('hidden');
                placeholder.classList.remove('hidden');
            };
        } else {
            preview.classList.add('hidden');
            placeholder.classList.remove('hidden');
        }
    }
</script>
</script>
