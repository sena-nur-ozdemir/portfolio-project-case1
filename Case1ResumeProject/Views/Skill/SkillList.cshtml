@model List<Skill>
@{
    ViewData["Title"] = "SkillList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-5xl mx-auto space-y-8">
        <!-- Welcome Section -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Yetenek Listesi</h3>
                <p class="text-slate-400 text-sm mt-1">Yeteneklerinizle ilgili işlemleri bu sayfadan gerçekleştirebilirsiniz.</p>
            </div>
            <a href="/Skill/CreateSkill/" class="flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all shadow-lg shadow-primary/20">
                <span class="material-symbols-outlined text-white" style="color: white; font-size: 20px;">add</span>
                Yeni Yetenek Ekle
            </a>
        </div>

        <!-- Skills Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            @foreach (var item in Model)
            {
                <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-xl hover:shadow-2xl hover:border-slate-700 transition-all group">
                    <div class="p-6">
                        <div class="flex items-start justify-between gap-4 mb-4">
                            <!-- Skill Info -->
                            <div class="flex items-start gap-4 flex-1">
                                <div class="w-12 h-12 bg-primary/20 rounded-xl flex items-center justify-center flex-shrink-0 group-hover:bg-primary/30 transition-all">
                                    <span class="material-symbols-outlined text-primary" style="font-size: 24px;">engineering</span>
                                </div>
                                <div class="flex-1">
                                    <h4 class="text-lg font-bold text-white mb-1 group-hover:text-primary transition-colors">@item.SkillName</h4>
                                </div>
                            </div>
                            
                            <!-- Actions -->
                            <div class="flex items-center gap-2">
                                <a href="/Skill/UpdateSkill/@item.SkillId" class="p-2 bg-slate-800 hover:bg-slate-700 text-slate-400 hover:text-primary rounded-lg transition-all" title="Düzenle">
                                    <span class="material-symbols-outlined" style="font-size: 18px;">edit</span>
                                </a>
                                <a href="/Skill/DeleteSkill/@item.SkillId" class="p-2 bg-red-500/10 hover:bg-red-500/20 text-red-400 hover:text-red-300 rounded-lg transition-all border border-red-500/30" title="Sil">
                                    <span class="material-symbols-outlined" style="font-size: 18px;">delete</span>
                                </a>
                            </div>
                        </div>

                        <!-- Skill Level Bar -->
                        <div class="space-y-2">
                            <div class="flex items-center justify-between text-sm">
                                <span class="text-slate-400 font-medium">Seviye</span>
                                <span class="text-white font-bold">@item.SkillLevel%</span>
                            </div>
                            <div class="w-full bg-slate-900/50 rounded-full h-3 overflow-hidden border border-slate-700">
                                <div class="h-full bg-gradient-to-r from-primary to-blue-500 rounded-full transition-all duration-500 shadow-lg shadow-primary/50" style="width: @item.SkillLevel%"></div>
                            </div>
                        </div>

                        <!-- Level Badge -->
                        <div class="mt-4">
                            @if (item.SkillLevel >= 80)
                            {
                                <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-bold bg-emerald-500/20 text-emerald-400 border border-emerald-500/30">
                                    <span class="material-symbols-outlined" style="font-size: 14px;">verified</span>
                                    İleri Seviye
                                </span>
                            }
                            else if (item.SkillLevel >= 50)
                            {
                                <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-bold bg-blue-500/20 text-blue-400 border border-blue-500/30">
                                    <span class="material-symbols-outlined" style="font-size: 14px;">trending_up</span>
                                    Orta Seviye
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-bold bg-amber-500/20 text-amber-400 border border-amber-500/30">
                                    <span class="material-symbols-outlined" style="font-size: 14px;">rocket_launch</span>
                                    Başlangıç Seviye
                                </span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Footer -->
        <div class="flex items-center justify-between px-4">
            <p class="text-slate-500 text-sm">Toplam <span class="text-white font-semibold">@Model.Count</span> yetenek listeleniyor</p>
            <div class="flex gap-2">
                <button class="px-4 py-2 rounded-lg border border-slate-700 text-slate-400 hover:text-white hover:border-slate-600 transition-all text-sm font-bold">Önceki</button>
                <button class="px-4 py-2 rounded-lg border border-slate-700 text-slate-400 hover:text-white hover:border-slate-600 transition-all text-sm font-bold">Sonraki</button>
            </div>
        </div>
    </div>
</div>
