@model List<Case1ResumeProject.Entities.Service>
@{
    string[] colors = ["#6C6CE5", "#F9D74C", "#F97B8B"];
    int i = 0;
}

<section id="services">

    <div class="container">

        <!-- section title -->
        <h2 class="section-title wow fadeInUp">Hizmetlerim</h2>

        <div class="spacer" data-height="60"></div>

        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <!-- service box -->
                    <div class="service-box rounded data-background padding-30 text-center text-light shadow-blue" data-color="@colors[i % colors.Length]">
                        <img src="@item.ImageUrl" alt="UI/UX design" style="width: 80px; height: 80px; object-fit: contain;" />

                        <h3 class="mb-3 mt-0">@item.Title</h3>
                        <p class="mb-0">@item.Description</p>
                    </div>
                    <div class="spacer d-md-none d-lg-none" data-height="30"></div>
                </div>
                i++;
            }
        </div>

        <div class="mt-5 text-center">
            <p class="mb-0">Bir işiniz mi var? <a href="#contact">Buradan</a> bana yazın! 👋</p>
        </div>

    </div>

</section>