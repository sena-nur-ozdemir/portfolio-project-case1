@model List<Case1ResumeProject.Entities.Portfolio>

<section id="works">
    <div class="container">

        <h2 class="section-title wow fadeInUp">Projelerim</h2>
        <div class="spacer" data-height="60"></div>

        @await Component.InvokeAsync("_DefaultCategoryComponentPartial")

        <!-- PORTFOLIO GRID -->
        <div class="row portfolio-wrapper justify-content-center">


            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-4 col-sm-6 col-12 grid-item @item.Category.CategorySlug">


                    <!-- KART -->
                    <a href="#project-@item.PortfolioId" class="work-content popup-link">

                        <div class="portfolio-item rounded shadow-dark">
                            <div class="details">
                                <span class="term">@item.Category.CategoryName</span>
                                <h4 class="title">@item.ProjectTitle</h4>
                                <span class="more-button">
                                    <i class="icon-magnifier-add"></i>
                                </span>
                            </div>

                            <div class="thumb">
                                <img src="@item.ImageUrl"
                                     alt="@item.ProjectTitle"
                                     class="img-fluid" />
                                <div class="mask"></div>
                            </div>
                        </div>

                    </a>

                </div>
            }

        </div>

        <!-- POPUPLAR (GRID DIŞINDA!) -->
        @foreach (var item in Model)
        {
            <div id="project-@item.PortfolioId"
                 class="white-popup mfp-hide project-popup-lg">

                <div class="popup-header">
                    <h2>@item.ProjectTitle</h2>
                    <span class="popup-category">
                        @item.Category.CategoryName
                    </span>
                </div>

                <div class="popup-image">
                    <img src="@item.ImageUrl"
                         alt="@item.ProjectTitle"
                         class="img-fluid" />
                </div>

                <div class="popup-content">
                    <p>@item.Description</p>
                </div>

            </div>
        }

    </div>
</section>
