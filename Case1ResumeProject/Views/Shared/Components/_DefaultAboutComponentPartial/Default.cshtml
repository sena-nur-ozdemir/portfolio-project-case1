@model List<About>
<section id="about">

	<div class="container">

		<!-- section title -->
		<h2 class="section-title wow fadeInUp">Hakkımda</h2>

		<div class="spacer" data-height="60"></div>
		@foreach (var item in Model)
		{
			<div class="row">

				<div class="col-md-3">
					<div class="text-center text-md-left">
						<!-- avatar image -->
						<img src="@item.ImageUrl" alt="Bolby" style="width: 200px; height: 200px; border-radius: 50%; object-fit: cover; display: block; margin: 0 auto 1rem auto;" />
					</div>
					<div class="spacer d-md-none d-lg-none" data-height="30"></div>
				</div>

				<div class="col-md-9 triangle-left-md triangle-top-sm">
					<div class="rounded bg-white shadow-dark padding-30">
						<div class="row">
							<div class="col-md-6">
								<!-- about text -->
								<p>@item.Description</p>
								<div class="mt-3">
									<a href="~/files/Sena_Nur_Özdemir_CV.pdf" download class="btn btn-default">CV'mi İndir</a>
								</div>
								<div class="spacer d-md-none d-lg-none" data-height="30"></div>
							</div>
							@await Component.InvokeAsync("_DefaultSkillComponentPartial")
						</div>
					</div>
				</div>
			</div>
			<!-- row end -->
		}
		<div class="spacer" data-height="70"></div>
		@await Component.InvokeAsync("_DefaultStatisticsComponentPartial")


	</div>

</section>