@model About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-5xl mx-auto space-y-8">

        <!-- Header -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Hakkımda Bilgileri</h3>
                <p class="text-slate-400 text-sm mt-1">
                    Kişisel bilgilerinizi bu sayfadan düzenleyebilirsiniz.
                </p>
            </div>
        </div>

        <!-- Form Card -->
        <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl">
            <form method="post" action="/About/UpdateAbout" class="p-8 space-y-6">

                <input type="hidden" asp-for="AboutId" />

                <!-- Profile Preview -->
                <div class="bg-gradient-to-r from-primary/10 to-transparent p-6 rounded-lg border border-slate-700">
                    <div class="flex items-center gap-6">
                        <div class="w-24 h-24 rounded-full overflow-hidden bg-slate-900 ring-4 ring-primary/30">
                            <img id="profilePreview"
                                 src="@Model.ImageUrl"
                                 alt="@Model.NameSurname"
                                 class="w-full h-full object-cover" />
                        </div>
                        <div>
                            <p class="text-slate-400 text-xs font-semibold uppercase mb-1">
                                Profil Önizleme
                            </p>
                            <h4 class="text-xl font-bold text-white">
                                @Model.NameSurname
                            </h4>

                            @if (!string.IsNullOrEmpty(Model.CvUrl))
                            {
                                <a href="@Model.CvUrl"
                                   target="_blank"
                                   class="inline-block mt-2 text-sm text-emerald-400 hover:underline">
                                    CV’yi Görüntüle
                                </a>
                            }
                        </div>
                    </div>
                </div>

                <!-- Name -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-slate-300">
                        Ad Soyad
                    </label>
                    <input asp-for="NameSurname"
                           class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white"
                           required />
                </div>

                <!-- Image URL -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-slate-300">
                        Profil Fotoğrafı URL
                    </label>
                    <input asp-for="ImageUrl"
                           id="imageUrl"
                           class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white"
                           oninput="updateImagePreview(this.value)"
                           required />
                </div>

                <!-- CV URL -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-slate-300">
                        CV Dosya Yolu
                    </label>
                    <input asp-for="CvUrl"
                           class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white"
                           placeholder="/files/Sena_Nur_Özdemir_CV.pdf" />
                    <p class="text-xs text-slate-500">
                        CV dosyanız <b>wwwroot/files</b> klasöründe olmalıdır.
                    </p>
                </div>

                <!-- Description -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-slate-300">
                        Hakkımda Açıklaması
                    </label>
                    <textarea asp-for="Description"
                              rows="6"
                              class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white"
                              required></textarea>
                </div>

                <!-- Buttons -->
                <div class="flex gap-4 pt-4 border-t border-slate-800">
                    <button type="submit"
                            class="bg-primary text-white px-8 py-3 rounded-lg font-bold">
                        Kaydet
                    </button>
                    <button type="reset"
                            class="bg-slate-800 text-white px-8 py-3 rounded-lg">
                        Sıfırla
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

<script>
    function updateImagePreview(url) {
        const preview = document.getElementById('profilePreview');
        preview.src = url && url.trim() !== '' ? url : preview.src;
    }
</script>