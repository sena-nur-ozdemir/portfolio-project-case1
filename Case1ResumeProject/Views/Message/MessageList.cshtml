@model List<Message>
@{
    ViewData["Title"] = "MessageList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-6xl mx-auto space-y-8">
        <!-- Welcome Section -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Gelen Mesajlar</h3>
                <p class="text-slate-400 text-sm mt-1">İletişim formundan gelen mesajları bu sayfadan yönetebilirsiniz.</p>
            </div>
            <div class="flex items-center gap-3">
                <div class="bg-slate-800 rounded-lg px-4 py-2 flex items-center gap-2">
                    <span class="material-symbols-outlined text-primary" style="font-size: 20px;">mail</span>
                    <span class="text-white font-bold">@Model.Count(m => !m.IsRead)</span>
                    <span class="text-slate-400 text-sm">Okunmamış</span>
                </div>
            </div>
        </div>

        <!-- Messages List -->
        <div class="space-y-3">
            @foreach (var item in Model)
            {
                <div class="bg-card-dark rounded-lg border @(item.IsRead ? "border-slate-800" : "border-primary/30 bg-primary/5") overflow-hidden shadow-lg hover:shadow-xl transition-all group">
                    <div class="p-5">
                        <div class="flex items-start justify-between gap-4">
                            <!-- Left: Message Info -->
                            <div class="flex items-start gap-4 flex-1">
                                <!-- Status Icon -->
                                <div class="w-12 h-12 @(item.IsRead ? "bg-slate-800" : "bg-primary/20") rounded-lg flex items-center justify-center flex-shrink-0 transition-all">
                                    @if (item.IsRead)
                                    {
                                        <span class="material-symbols-outlined text-slate-400" style="font-size: 24px;">drafts</span>
                                    }
                                    else
                                    {
                                        <span class="material-symbols-outlined text-primary" style="font-size: 24px;">mail</span>
                                    }
                                </div>

                                <div class="flex-1 space-y-2">
                                    <!-- Header -->
                                    <div class="flex items-start justify-between gap-4">
                                        <div class="flex-1">
                                            <div class="flex items-center gap-2 mb-1">
                                                <h4 class="text-base font-bold @(item.IsRead ? "text-white" : "text-primary") group-hover:text-primary transition-colors">@item.NameSurname</h4>
                                                @if (!item.IsRead)
                                                {
                                                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-bold bg-primary/20 text-primary border border-primary/30">
                                                        Yeni
                                                    </span>
                                                }
                                            </div>
                                            <p class="text-slate-400 text-sm flex items-center gap-2">
                                                <span class="material-symbols-outlined" style="font-size: 16px;">email</span>
                                                @item.Email
                                            </p>
                                        </div>
                                        <div class="text-right">
                                            <p class="text-slate-400 text-xs flex items-center gap-1 mt-1">
                                                <span class="material-symbols-outlined" style="font-size: 14px;">schedule</span>
                                                @item.SendDate.ToString("dd.MM.yyyy HH:mm")
                                            </p>
                                        </div>
                                    </div>

                                    <!-- Subject -->
                                    <div class="bg-slate-900/30 border border-slate-700 rounded-lg px-3 py-2">
                                        <p class="text-slate-300 font-semibold text-sm">@item.Subject</p>
                                    </div>

                                    <!-- Message Content -->
                                    <div class="text-slate-400 text-sm leading-relaxed line-clamp-2">
                                        @item.MessageDetail
                                    </div>
                                </div>
                            </div>

                            <!-- Right: Actions -->
                            <div class="flex flex-col gap-2">
                                <a href="/Message/MessageDetail/@item.MessageId" class="flex items-center gap-1.5 px-4 py-2 bg-primary/10 hover:bg-primary/20 text-primary rounded-lg text-sm font-semibold transition-all border border-primary/30">
                                    <span class="material-symbols-outlined" style="font-size: 18px;">visibility</span>
                                    Görüntüle
                                </a>
                                <a href="/Message/DeleteMessage/@item.MessageId" class="flex items-center gap-1.5 px-4 py-2 bg-red-500/10 hover:bg-red-500/20 text-red-400 rounded-lg text-sm font-semibold transition-all border border-red-500/30">
                                    <span class="material-symbols-outlined" style="font-size: 18px;">delete</span>
                                    Sil
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Footer -->
        <div class="flex items-center justify-between px-4">
            <p class="text-slate-500 text-sm">Toplam <span class="text-white font-semibold">@Model.Count</span> mesaj listeleniyor</p>
            <div class="flex gap-2">
                <button class="px-4 py-2 rounded-lg border border-slate-700 text-slate-400 hover:text-white hover:border-slate-600 transition-all text-sm font-bold">Önceki</button>
                <button class="px-4 py-2 rounded-lg border border-slate-700 text-slate-400 hover:text-white hover:border-slate-600 transition-all text-sm font-bold">Sonraki</button>
            </div>
        </div>
    </div>
</div>

