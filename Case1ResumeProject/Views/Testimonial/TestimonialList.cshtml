@model List<Testimonial>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-6xl mx-auto space-y-8">
        <!-- Welcome Section -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Referans Listesi</h3>
                <p class="text-slate-400 text-sm mt-1">Müşteri referanslarınızla ilgili işlemleri bu sayfadan gerçekleştirebilirsiniz.</p>
            </div>
            <a href="/Testimonial/CreateTestimonial/" class="flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all shadow-lg shadow-primary/20">
                <span class="material-symbols-outlined text-white" style="color: white; font-size: 20px;">add</span>
                Yeni Referans Ekle
            </a>
        </div>

        <!-- Testimonials Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            @foreach (var item in Model)
            {
                <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-xl hover:shadow-2xl hover:border-slate-700 transition-all group">
                    <div class="p-6">
                        <!-- Header with Avatar and Info -->
                        <div class="flex items-start gap-4 mb-4">
                            <div class="w-16 h-16 rounded-full overflow-hidden bg-slate-900 flex-shrink-0 ring-2 ring-slate-700 group-hover:ring-primary transition-all">
                                <img src="@item.ImageUrl" alt="@item.NameSurname" class="w-full h-full object-cover" />
                            </div>
                            <div class="flex-1">
                                <h4 class="text-lg font-bold text-white mb-1 group-hover:text-primary transition-colors">@item.NameSurname</h4>
                                <p class="text-slate-400 text-sm font-medium">@item.Title</p>
                            </div>
                        </div>

                        <!-- Comment -->
                        <div class="bg-slate-900/30 border border-slate-700 rounded-lg p-4 mb-4">
                            <div class="flex gap-2 mb-2">
                                <span class="material-symbols-outlined text-primary" style="font-size: 20px;">format_quote</span>
                            </div>
                            <p class="text-slate-300 text-sm leading-relaxed line-clamp-3">@item.Comment</p>
                        </div>

                        <!-- Actions -->
                        <div class="flex items-center gap-2 pt-4 border-t border-slate-800">
                            <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="flex-1 flex items-center justify-center gap-2 px-4 py-2.5 bg-slate-800 hover:bg-slate-700 text-white rounded-lg text-sm font-semibold transition-all">
                                <span class="material-symbols-outlined" style="font-size: 18px;">edit</span>
                                Düzenle
                            </a>
                            <a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="flex-1 flex items-center justify-center gap-2 px-4 py-2.5 bg-red-500/10 hover:bg-red-500/20 text-red-400 rounded-lg text-sm font-semibold transition-all border border-red-500/30">
                                <span class="material-symbols-outlined" style="font-size: 18px;">delete</span>
                                Sil
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Footer -->
        <div class="flex items-center justify-between px-4">
            <p class="text-slate-500 text-sm">Toplam <span class="text-white font-semibold">@Model.Count</span> referans listeleniyor</p>
            <div class="flex gap-2">
                <button class="px-4 py-2 rounded-lg border border-slate-700 text-slate-400 hover:text-white hover:border-slate-600 transition-all text-sm font-bold">Önceki</button>
                <button class="px-4 py-2 rounded-lg border border-slate-700 text-slate-400 hover:text-white hover:border-slate-600 transition-all text-sm font-bold">Sonraki</button>
            </div>
        </div>
    </div>
</div>